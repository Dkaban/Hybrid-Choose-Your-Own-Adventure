<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hybridyourownadventure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HybridYourOwnAdventure">
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.HybridYourOwnAdventure.NoActionBar"
            android:screenOrientation = "portrait"></activity>

        <service
            android:name=".AudioService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".GameThreeActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".GameTwoActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".GameOneActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".LeaderBoardActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".OptionsActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".ChooseAdventureActivity"
            android:screenOrientation = "portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation = "portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>